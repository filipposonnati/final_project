		<body>
			<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm sticky-top">
				<h5 class="my-0 mr-md-auto font-weight-normal">The Cryptography's Wiki</h5>

				<nav class="my-2 my-md-0 mr-md-3">
					{% if app.request.pathinfo != '/' %}
						<a class="p-2 text-dark" href="{{ path('') }}">Home</a>
					{% endif %}

					{% if is_granted('ROLE_USER') and (app.request.pathinfo != '/user') %}
						<a class="p-2 text-dark" href="{{ path('user') }}">User</a>
					{% endif %}

					{% if is_granted('ROLE_ADMIN') and (app.request.pathinfo != '/admin') %}
						<a class="p-2 text-dark" href="{{ path('admin') }}">Admin</a>
					{% endif %}

					{% if (app.user == false) and (app.request.pathinfo != '/login') %}
						<a class="btn btn-outline-primary" href="{{ path('app_login') }}">Sign in</a>
					{% endif %}
					{% if (app.user == false) and (app.request.pathinfo != '/register') %}
						<a class="btn btn-outline-dark" href="{{ path('app_register') }}">Sign up</a>
					{% endif %}

					{% if app.user %}
						<a class="btn btn-outline-dark" href="{{ path('app_logout') }}">Logout</a>
					{% endif %}
				</nav>
			</div>

			{% block body %}{% endblock %}

