{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block style %}
	<link rel="stylesheet" href="{{ asset("/css/security.css") }}">
{% endblock %}

{% block body %}

	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	{{ form_start(registrationForm, {
        'attr': {
            'class': 'form-signin'
            }
        }
    ) }}

	<img class="mb-4" src="{{ asset("/icon/person-fill.svg") }}" alt="Not found" width="72" height="72">

	<h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

	{{ form_label(registrationForm.username, null, {
        'label_attr': {
            'for': 'inputUsername',
            'class': 'sr-only'
            }
        }) }}

	{{ form_widget(registrationForm.username, {
        'attr': {
            'type': 'text',
            'name': 'username',
            'id': 'inputUsername',
            'class': 'form-control',
            'placeholder': 'Username'
        }
    }) }}

	<small>{{ form_help(registrationForm.username) }}</small>

	<div class="form-error">
		{{ form_errors(registrationForm.username) }}
	</div>

	{{ form_label(registrationForm.plainPassword, null, {
        'label_attr': {
            'for': 'inputUsername',
            'class': 'sr-only'
            }
        }) }}

	{{ form_widget(registrationForm.plainPassword, {
        'attr': {
            'type': 'password',
            'name': 'password',
            'id': 'inputPassword',
            'class': 'form-control',
            'placeholder': 'Password'
        }
    }) }}

	<small>{{ form_help(registrationForm.plainPassword) }}</small>

	<div class="form-error">
		{{ form_errors(registrationForm.plainPassword) }}
	</div>

	{{ form_label(registrationForm.agreeTerms) }}

	{{ form_widget(registrationForm.agreeTerms) }}

	<button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>

	{{ form_end(registrationForm) }}
{% endblock %}
