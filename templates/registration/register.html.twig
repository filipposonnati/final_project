{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block style %}

	<style>
		html,
		body {
			height: 100%;
			text-align: center;
		}

		body {
			display: -ms-flexbox;
			display: flex;
			-ms-flex-align: center;
			align-items: center;
			padding-top: 40px;
			padding-bottom: 40px;
			background-color: #f5f5f5;
		}

		.form-signin {
			width: 100%;
			max-width: 330px;
			padding: 15px;
			margin: auto;
		}
		.form-signin .checkbox {
			font-weight: 400;
		}
		.form-signin .form-control {
			position: relative;
			box-sizing: border-box;
			height: auto;
			padding: 10px;
			font-size: 16px;
		}
		.form-signin .form-control:focus {
			z-index: 2;
		}
		.form-signin input[type="text"] {
			margin-bottom: -1px;
			border-bottom-right-radius: 0;
			border-bottom-left-radius: 0;
		}
		.form-signin input[type="password"] {
			margin-bottom: 10px;
			border-top-left-radius: 0;
			border-top-right-radius: 0;
		}
		.bd-placeholder-img {
			font-size: 1.125rem;
			text-anchor: middle;
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			user-select: none;
		}

		@media(min-width: 768px) {
			.bd-placeholder-img-lg {
				font-size: 3.5rem;
			}
		}
	</style>

{% endblock %}

{% block body %}

	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	{{ form_start(registrationForm, {
        'attr': {
            'class': 'form-signin'
            }
        }
    ) }}

	<img class="mb-4" src="{{ asset("/icon/person-fill.svg") }}" alt="Not found" width="72" height="72">

	<h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

	{{ form_label(registrationForm.username, null, {
        'label_attr': {
            'for': 'inputUsername',
            'class': 'sr-only'
            }
        }) }}

	{{ form_widget(registrationForm.username, {
        'attr': {
            'type': 'text',
            'name': 'username',
            'id': 'inputUsername',
            'class': 'form-control',
            'placeholder': 'Username'
        }
    }) }}

	<small>{{ form_help(registrationForm.username) }}</small>

	<div class="form-error">
		{{ form_errors(registrationForm.username) }}
	</div>

	{{ form_label(registrationForm.plainPassword, null, {
        'label_attr': {
            'for': 'inputUsername',
            'class': 'sr-only'
            }
        }) }}

	{{ form_widget(registrationForm.plainPassword, {
        'attr': {
            'type': 'password',
            'name': 'password',
            'id': 'inputPassword',
            'class': 'form-control',
            'placeholder': 'Password'
        }
    }) }}

	<small>{{ form_help(registrationForm.plainPassword) }}</small>

	<div class="form-error">
		{{ form_errors(registrationForm.plainPassword) }}
	</div>

	{{ form_label(registrationForm.agreeTerms) }}

	{{ form_widget(registrationForm.agreeTerms) }}

	<button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>

	{{ form_end(registrationForm) }}
{% endblock %}
