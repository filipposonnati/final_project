{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block style %}
	<link rel="stylesheet" href="{{ asset("/css/security.css") }}">
{% endblock %}

{% block body %}

	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	{% if app.user %}
		<div class="container my-5">
			<div class="row justify-content-center">
				<img class="mb-4" src="{{ asset("/icon/person-fill.svg") }}" alt="Not found" width="72" height="72">
			</div>

			<div class="row justify-content-center">
				<h1 class="h3 mb-3 font-weight-normal">You are logged in as
					{{ app.user.username }}
				</h1>
			</div>

			<div class="row justify-content-center">
				<h1>
					<a href="{{ path('app_logout') }}">Logout</a>
				</h1>
			</div>
		</div>
	{% endif %}

	{% if app.user == false %}
		{{ form_start(registrationForm, {
        'attr': {
            'class': 'form-signin'
            }
        }
    ) }}

		<img class="mb-4" src="{{ asset("/icon/person-fill.svg") }}" alt="Not found" width="72" height="72">

		<h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

		{{ form_widget(registrationForm.username, {
        'attr': {
            'type': 'text',
            'name': 'username',
            'class': 'form-control',
            'placeholder': 'Username'
        }
    }) }}

		<small>{{ form_help(registrationForm.username) }}</small>

		<div class="form-error">
			{{ form_errors(registrationForm.username) }}
		</div>

		{{ form_widget(registrationForm.plainPassword.first, {
        'attr': {
            'type': 'password',
            'name': 'password',
            'class': 'form-control',
            'placeholder': 'Password'
        }
    }) }}

		{{ form_widget(registrationForm.plainPassword.second, {
        'attr': {
            'type': 'password',
            'name': 'password',
            'class': 'form-control',
            'placeholder': 'Repeat Password'
        }
    }) }}

		<small>{{ form_help(registrationForm.plainPassword) }}</small>

		<div class="form-error">
			{{ form_errors(registrationForm.plainPassword) }}
		</div>

		{{ form_rest(registrationForm) }}

		<button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>

		{{ form_end(registrationForm) }}
	{% endif %}

{% endblock %}
